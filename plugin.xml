<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
xmlns:android="http://schemas.android.com/apk/res/android"
           id="cordova-plugin-advertising-id"
      version="1.1.0">

    <name>cordova-plugin-advertising-id</name>
    <description>Cordova plugin to get Advertising ID</description>
    <license>MIT</license>
    <keywords>cordova</keywords>
    <repo>https://github.com/koenlav/cordova-plugin-advertising-id</repo>
    <issue>https://github.com/koenlav/cordova-plugin-advertising-id/issues</issue>

    <js-module src="www/advertisingId.js" name="advertisingId">
        <merges target="cordova.plugins.advertisingId" />
    </js-module>

    <engines>
        <engine name="cordova" version=">=7.1.0"/>
        <engine name="cordova-android" version=">=7.0.0"/>
    </engines>

    <platform name="android">
        <preference name="PLAY_SEVICES_VERSION" default="17.0.+"/>

        <config-file target="res/xml/config.xml" parent="/*">
            <feature name="Idfa">
                <param name="android-package" value="cordova.advertising.AdvertisingIdPlugin" />
            </feature>
        </config-file>

        <config-file target="AndroidManifest.xml" parent="/*">
            <uses-permission android:name="android.permission.INTERNET" />
        </config-file>

        <dependency id="cordova-support-android-plugin" version="~1.0.0"/>

        <framework src="com.google.android.gms:play-services-ads-identifier:$PLAY_SEVICES_VERSION" />

        <source-file src="src/android/AdvertisingIdPlugin.java" target-dir="src/cordova/advertising/" />
    </platform>

</plugin>
